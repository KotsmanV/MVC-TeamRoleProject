@model IEnumerable<TeamRoleProject.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.Identity.Name.Equals("admin@admin.net") && Request.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.BookId })
            @if (User.Identity.Name.Equals("admin@admin.net") && Request.IsAuthenticated)
            {
                <text>@Html.ActionLink("Edit", "Edit", new { id = item.BookId })</text>
                <text>@Html.ActionLink("Delete", "Delete", new { id = item.BookId })</text>
            }
        </td>
    </tr>
}

</table>
